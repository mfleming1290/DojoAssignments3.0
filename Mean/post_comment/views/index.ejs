<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <% if(typeof(errors) != 'undefined' ) { %>
            <% for (var x in errors) { %>
             <h3><%= errors[x].message %></h3>
            <% } %>
        <% } %>
        <h1>Make a post!</h1>
        <form class="" action="/posts" method="post">
            Post: <textarea name="text" rows="8" cols="80"></textarea>
            <input type="submit" name="" value="submit">
        </form>
        <% if(typeof(data) != 'undefined' ) { %>
        <% data.forEach(function (data) { %>
            <p><a href="/posts/<%= data.id %>"><%= data.text %></a></p>
            <form class="" action="/comment/<%= data.id %>" method="post">
                Comment: <input type="text" name="text" value="">
                <input type="submit" name="" value="Comment">
            </form>
        <% }) %>
        <% } %>
    </body>
</html>
